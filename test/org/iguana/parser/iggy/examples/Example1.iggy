regex Number ::= [a-Az-Z]*

regex Char ::= [a-Az-Z]

@NoLayout
Identifier ::= Char* !>> [a-Zz-A]

Expression ::=  '-' Expression                                       <unMinus>
             >  Expression '*' Expression                            <mult>        left
             > (Expression '+' Expression                            <add>
             |  Expression '-' Expression                            <minus>)      left
             > "if" Expression "then" Expression "else" Expression   <ifThenElse>
             | Number